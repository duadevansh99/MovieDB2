<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.de.moviedb2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_movie_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_movie_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayCategory"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".DisplayMovieItem"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".CastDisplayActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>